{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "type": "chrome",
            "request": "attach",
            "name": "Vue.js",
            "port": 9222,
            "webRoot": "${workspaceFolder}/fund-analyser-app/src"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Nodemon server",
            "restart": true,
            "protocol": "inspector"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Update Catalog",
            "program": "${workspaceFolder}/fund-analyser-data/scripts/main.js",
            "args": [
                "-r",
                "updateCatalog"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Update Funds",
            "program": "${workspaceFolder}/fund-analyser-data/scripts/main.js",
            "args": [
                "-r",
                "updateFunds"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Download Csv",
            "program": "${workspaceFolder}/fund-analyser-data/scripts/main.js",
            "args": [
                "-r",
                "downloadCsv"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest All",
            "program": "${workspaceFolder}/fund-analyser-data/node_modules/.bin/jest",
            "args": ["--runInBand"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "windows": {
              "program": "${workspaceFolder}/fund-analyser-data/node_modules/jest/bin/jest",
            }
          },
          {
            "type": "node",
            "request": "launch",
            "name": "Jest Current File",
            "program": "${workspaceFolder}/fund-analyser-data/node_modules/.bin/jest",
            "args": ["${relativeFile}"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "windows": {
              "program": "${workspaceFolder}/fund-analyser-data/node_modules/jest/bin/jest",
            }
          }
    ]
}