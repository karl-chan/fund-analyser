    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "chrome",
            "request": "attach",
            "name": "Vue.js",
            "port": 9222,
            "webRoot": "${workspaceFolder}/fund-analyser-app/src"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Node.js Server",
            "program": "${workspaceFolder}/fund-analyser-data/server/server-koa.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Update Catalog",
            "program": "${workspaceFolder}/fund-analyser-data/scripts/main.js",
            "args": [
                "-r",
                "updateCatalog"
            ]
        }
    ]
}